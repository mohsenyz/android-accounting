<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="105dp"
        android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:cardUseCompatPadding="true"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="32dp"
                android:background="@null"
                android:textSize="12dp"
                android:text="آمار بر اساس تاریخ و قیمت گزارشات"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="32dp"
                android:textSize="12dp"
                android:text="آمار بر اساس محصول"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="32dp"
                android:textSize="12dp"
                android:text="آمار بر اساس دسته بندی"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/bp_gradient"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
