<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    tools:targetApi="jelly_bean_mr1">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:id="@+id/container">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:textColor="#fff"
                android:text="تراکنش ها"
                android:id="@+id/submit"
                android:layout_margin="4dp"
                android:textSize="11dp"
                android:minHeight="34dp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/user"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:src="@drawable/user"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user"
                android:id="@+id/pan"
                android:paddingBottom="27dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingRight="7dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subText"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/pan"
                android:background="#eaeaea">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3333"
                    android:textColor="#555"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/bottombar_call"
                    android:text="تماس"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3334"
                    android:textColor="#555"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/bottombar_msg"
                    android:text="پیام"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3333"
                    android:textColor="#555"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/bottombar_edit"
                    android:text="ویرایش"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/loading"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:src="@drawable/ic_blue_load"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>